{% comment %}
  Footer section for Bike Yard Shopify theme - Refactored for modern, clean, responsive look
{% endcomment %}

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10">
      <!-- About Bike Yard -->
      <div>
        <div class="flex items-center space-x-2 mb-6">
          <div class="w-10 h-10 bg-gradient-to-br from-primary-600 to-accent-500 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-xl">BY</span>
          </div>
          <span class="text-2xl font-bold bg-gradient-to-r from-primary-600 to-accent-500 bg-clip-text text-transparent">Bike Yard</span>
        </div>
        <p class="text-gray-400 leading-relaxed mb-6">
          {{ section.settings.description | default: "Your one-stop destination for quality bikes, accessories, and expert service. We're passionate about cycling and committed to providing the best experience for our customers." }}
        </p>
        <div class="flex space-x-3">
          {% if section.settings.facebook_url %}
          <a href="{{ section.settings.facebook_url }}" class="w-9 h-9 bg-gray-800 rounded-full flex items-center justify-center hover:bg-primary-600 transition" aria-label="Facebook">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
          </a>
          {% endif %}
          {% if section.settings.twitter_url %}
          <a href="{{ section.settings.twitter_url }}" class="w-9 h-9 bg-gray-800 rounded-full flex items-center justify-center hover:bg-primary-600 transition" aria-label="Twitter">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
          </a>
          {% endif %}
          {% if section.settings.instagram_url %}
          <a href="{{ section.settings.instagram_url }}" class="w-9 h-9 bg-gray-800 rounded-full flex items-center justify-center hover:bg-primary-600 transition" aria-label="Instagram">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.418-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.928.875 1.418 2.026 1.418 3.323s-.49 2.448-1.418 3.244c-.875.807-2.026 1.297-3.323 1.297zm7.83-9.781c-.49 0-.928-.175-1.297-.49-.368-.315-.49-.753-.49-1.243 0-.49.122-.928.49-1.243.369-.315.807-.49 1.297-.49s.928.175 1.297.49c.368.315.49.753.49 1.243 0 .49-.122.928-.49 1.243-.369.315-.807.49-1.297.49z"/></svg>
          </a>
          {% endif %}
          {% if section.settings.youtube_url %}
          <a href="{{ section.settings.youtube_url }}" class="w-9 h-9 bg-gray-800 rounded-full flex items-center justify-center hover:bg-primary-600 transition" aria-label="YouTube">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
          </a>
          {% endif %}
        </div>
      </div>
      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li><a href="{{ routes.root_url }}" class="text-gray-400 hover:text-white transition">Home</a></li>
          <li><a href="/collections/all" class="text-gray-400 hover:text-white transition">Products</a></li>
          <li><a href="/pages/contact" class="text-gray-400 hover:text-white transition">Contact us</a></li>
          <li><a href="/pages/cafe" class="text-gray-400 hover:text-white transition">Cafe Menu</a></li>
        </ul>
      </div>
      <!-- Categories -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Categories</h3>
        <ul class="space-y-2">
          <li><a href="/collections/mountain-bikes" class="text-gray-400 hover:text-white transition">Mountain Bikes</a></li>
          <li><a href="/collections/road-bikes" class="text-gray-400 hover:text-white transition">Road Bikes</a></li>
          <li><a href="/collections/city-bikes" class="text-gray-400 hover:text-white transition">City Bikes</a></li>
          <li><a href="/collections/accessories" class="text-gray-400 hover:text-white transition">Accessories</a></li>
        </ul>
      </div>
      <!-- Contact Info & Newsletter -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Contact Info</h3>
        <div class="space-y-3">
          <div class="flex items-start space-x-2">
            <svg class="h-5 w-5 text-primary-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
            <span class="text-gray-400">{{ section.settings.address | default: '123 Bike Street, City, Country' }}</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="h-5 w-5 text-primary-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
            <a href="tel:{{ section.settings.phone | default: '+12345678900' }}" class="text-gray-400 hover:text-white transition">{{ section.settings.phone | default: '+1 234 567 8900' }}</a>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="h-5 w-5 text-primary-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
            <a href="mailto:{{ section.settings.email | default: 'info@bikeyard.com' }}" class="text-gray-400 hover:text-white transition">{{ section.settings.email | default: 'info@bikeyard.com' }}</a>
          </div>
        </div>
        <!-- Newsletter Signup -->
        <div class="mt-8">
          <h4 class="text-sm font-semibold mb-2">Newsletter</h4>
          <form class="flex rounded-lg overflow-hidden max-w-xs">
            <input type="email" placeholder="Enter your email" class="flex-1 px-3 py-2 bg-gray-800 border-none text-white placeholder-gray-400 focus:ring-2 focus:ring-primary-500 outline-none" />
            <button type="submit" class="px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white font-semibold transition">Subscribe</button>
          </form>
        </div>
      </div>
    </div>
    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 mt-10 pt-6 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-gray-400 text-sm">Â© 2025 Bike Yard Shop. All Rights Reserved.</p>
      <div class="flex space-x-6">
        <a href="/pages/privacy" class="text-gray-400 hover:text-white text-sm transition">Privacy Policy</a>
        <a href="/pages/terms" class="text-gray-400 hover:text-white text-sm transition">Terms of Service</a>
        <a href="/pages/shipping" class="text-gray-400 hover:text-white text-sm transition">Shipping Info</a>
      </div>
    </div>
  </div>
</footer>
