{% comment %}
  Cart page template for Bike Yard Shopify theme
{% endcomment %}

<div class="cart-page">
  <div class="container py-8">
    <h1 class="cart-page__title text-3xl font-bold text-gray-900 mb-8">Shopping Cart</h1>
    
    {% if cart.item_count > 0 %}
      <div class="cart-page__content grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Cart Items -->
        <div class="cart-page__items lg:col-span-2">
          <div class="cart-page__items-list space-y-4">
            {% for item in cart.items %}
              <div class="cart-page__item bg-white rounded-lg shadow-md p-6">
                <div class="cart-page__item-content flex items-center space-x-4">
                  <!-- Product Image -->
                  <div class="cart-page__item-image flex-shrink-0">
                    {% if item.image %}
                      <img 
                        src="{{ item.image | image_url: width: 100, height: 100, crop: 'center' }}" 
                        alt="{{ item.image.alt | escape }}"
                        class="w-20 h-20 object-cover rounded-lg"
                      >
                    {% else %}
                      <div class="w-20 h-20 bg-gray-200 rounded-lg flex items-center justify-center">
                        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                      </div>
                    {% endif %}
                  </div>
                  
                  <!-- Product Info -->
                  <div class="cart-page__item-info flex-1">
                    <h3 class="cart-page__item-title text-lg font-semibold text-gray-900 mb-2">
                      <a href="{{ item.url }}" class="hover:text-primary-600 transition-colors duration-200">
                        {{ item.product.title }}
                      </a>
                    </h3>
                    
                    {% if item.product.has_only_default_variant == false %}
                      <p class="cart-page__item-variant text-sm text-gray-600 mb-2">
                        {{ item.variant.title }}
                      </p>
                    {% endif %}
                    
                    <div class="cart-page__item-price text-lg font-bold text-primary-600">
                      {{ item.final_line_price | money }}
                    </div>
                  </div>
                  
                  <!-- Quantity Controls -->
                  <div class="cart-page__item-quantity flex items-center space-x-2">
                    <button 
                      class="cart-page__quantity-btn w-8 h-8 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors duration-200"
                      onclick="updateQuantity({{ item.key }}, {{ item.quantity | minus: 1 }})"
                    >
                      -
                    </button>
                    
                    <span class="cart-page__quantity-display w-12 text-center font-semibold">
                      {{ item.quantity }}
                    </span>
                    
                    <button 
                      class="cart-page__quantity-btn w-8 h-8 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors duration-200"
                      onclick="updateQuantity({{ item.key }}, {{ item.quantity | plus: 1 }})"
                    >
                      +
                    </button>
                  </div>
                  
                  <!-- Remove Button -->
                  <button 
                    class="cart-page__remove-btn text-red-500 hover:text-red-700 transition-colors duration-200"
                    onclick="removeItem({{ item.key }})"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  </button>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
        
        <!-- Cart Summary -->
        <div class="cart-page__summary lg:col-span-1">
          <div class="cart-page__summary-card bg-white rounded-lg shadow-md p-6">
            <h2 class="cart-page__summary-title text-xl font-bold text-gray-900 mb-6">Order Summary</h2>
            
            <div class="cart-page__summary-details space-y-4 mb-6">
              <div class="cart-page__summary-row flex justify-between">
                <span class="text-gray-600">Subtotal</span>
                <span class="font-semibold">{{ cart.items_subtotal_price | money }}</span>
              </div>
              
              {% if cart.cart_level_discount_applications.size > 0 %}
                {% for discount in cart.cart_level_discount_applications %}
                  <div class="cart-page__summary-row flex justify-between text-green-600">
                    <span>Discount ({{ discount.title }})</span>
                    <span>-{{ discount.total_allocated_amount | money }}</span>
                  </div>
                {% endfor %}
              {% endif %}
              
              <div class="cart-page__summary-row flex justify-between text-lg font-bold border-t pt-4">
                <span>Total</span>
                <span>{{ cart.total_price | money }}</span>
              </div>
            </div>
            
            <div class="cart-page__summary-actions space-y-4">
              <button 
                class="cart-page__checkout-btn w-full bg-primary-600 text-white py-3 px-6 rounded-lg font-semibold text-lg hover:bg-primary-700 transition-colors duration-200"
                onclick="window.location.href='/checkout'"
              >
                Proceed to Checkout
              </button>
              
              <button 
                class="cart-page__continue-shopping w-full border-2 border-primary-600 text-primary-600 py-3 px-6 rounded-lg font-semibold hover:bg-primary-600 hover:text-white transition-colors duration-200"
                onclick="window.location.href='/collections/all'"
              >
                Continue Shopping
              </button>
            </div>
          </div>
        </div>
      </div>
    {% else %}
      <!-- Empty Cart -->
      <div class="cart-page__empty text-center py-12">
        <svg class="w-24 h-24 text-gray-400 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m6-5v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6m8 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v4.01"></path>
        </svg>
        
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Your cart is empty</h2>
        <p class="text-gray-600 mb-8">Looks like you haven't added any products to your cart yet.</p>
        
        <a 
          href="/collections/all" 
          class="inline-block bg-primary-600 text-white px-8 py-3 rounded-lg font-semibold text-lg hover:bg-primary-700 transition-colors duration-200"
        >
          Start Shopping
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .cart-page {
    padding: 2rem 0;
  }
  
  .cart-page__title {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 2rem;
  }
  
  .cart-page__content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .cart-page__item {
    background: white;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
  }
  
  .cart-page__item-content {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .cart-page__item-image {
    flex-shrink: 0;
  }
  
  .cart-page__item-image img {
    width: 5rem;
    height: 5rem;
    object-fit: cover;
    border-radius: 0.5rem;
  }
  
  .cart-page__item-info {
    flex: 1;
  }
  
  .cart-page__item-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--gray-900);
    margin-bottom: 0.5rem;
  }
  
  .cart-page__item-title a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s;
  }
  
  .cart-page__item-title a:hover {
    color: var(--primary-600);
  }
  
  .cart-page__item-variant {
    font-size: 0.875rem;
    color: var(--gray-600);
    margin-bottom: 0.5rem;
  }
  
  .cart-page__item-price {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--primary-600);
  }
  
  .cart-page__item-quantity {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .cart-page__quantity-btn {
    width: 2rem;
    height: 2rem;
    background-color: var(--gray-100);
    color: var(--gray-700);
    border-radius: 0.5rem;
    border: none;
    cursor: pointer;
    transition: background-color 0.2s;
  }
  
  .cart-page__quantity-btn:hover {
    background-color: var(--gray-200);
  }
  
  .cart-page__quantity-display {
    width: 3rem;
    text-align: center;
    font-weight: 600;
  }
  
  .cart-page__remove-btn {
    color: #ef4444;
    background: none;
    border: none;
    cursor: pointer;
    transition: color 0.2s;
  }
  
  .cart-page__remove-btn:hover {
    color: #dc2626;
  }
  
  .cart-page__summary-card {
    background: white;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
  }
  
  .cart-page__summary-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 1.5rem;
  }
  
  .cart-page__summary-row {
    display: flex;
    justify-content: space-between;
  }
  
  .cart-page__summary-actions {
    margin-top: 1.5rem;
  }
  
  .cart-page__checkout-btn {
    width: 100%;
    background-color: var(--primary-600);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 1.125rem;
    border: none;
    cursor: pointer;
    transition: background-color 0.2s;
  }
  
  .cart-page__checkout-btn:hover {
    background-color: var(--primary-700);
  }
  
  .cart-page__continue-shopping {
    width: 100%;
    border: 2px solid var(--primary-600);
    color: var(--primary-600);
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    background: transparent;
    cursor: pointer;
    transition: all 0.2s;
  }
  
  .cart-page__continue-shopping:hover {
    background-color: var(--primary-600);
    color: white;
  }
  
  .cart-page__empty {
    text-align: center;
    padding: 3rem 0;
  }
  
  .cart-page__empty svg {
    width: 6rem;
    height: 6rem;
    color: var(--gray-400);
    margin: 0 auto 1.5rem;
  }
  
  .cart-page__empty h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 1rem;
  }
  
  .cart-page__empty p {
    color: var(--gray-600);
    margin-bottom: 2rem;
  }
  
  .cart-page__empty a {
    display: inline-block;
    background-color: var(--primary-600);
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 1.125rem;
    text-decoration: none;
    transition: background-color 0.2s;
  }
  
  .cart-page__empty a:hover {
    background-color: var(--primary-700);
  }
  
  @media (min-width: 1024px) {
    .cart-page__content {
      grid-template-columns: 2fr 1fr;
    }
  }
</style>

<script>
  function updateQuantity(key, quantity) {
    if (quantity < 1) {
      removeItem(key);
      return;
    }
    
    fetch('/cart/change.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        id: key,
        quantity: quantity
      })
    })
    .then(response => response.json())
    .then(data => {
      window.location.reload();
    })
    .catch(error => {
      console.error('Error updating quantity:', error);
    });
  }
  
  function removeItem(key) {
    fetch('/cart/change.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        id: key,
        quantity: 0
      })
    })
    .then(response => response.json())
    .then(data => {
      window.location.reload();
    })
    .catch(error => {
      console.error('Error removing item:', error);
    });
  }
</script>
