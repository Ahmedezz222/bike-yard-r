{% comment %}
  Hero section for Bike Yard Shopify theme
{% endcomment %}

<section class="hero relative bg-gradient-to-br from-primary-600 to-primary-700 text-white overflow-hidden">
  <div class="hero__background absolute inset-0">
    <div class="absolute inset-0 bg-black opacity-20"></div>
    {% if section.settings.hero_image %}
      <img 
        src="{{ section.settings.hero_image | image_url: width: 1920 }}" 
        alt="{{ section.settings.hero_image.alt | escape }}"
        class="w-full h-full object-cover"
        loading="lazy"
      >
    {% endif %}
  </div>
  
  <div class="container relative z-10">
    <div class="hero__content py-20 md:py-32 text-center">
      <h1 class="hero__title text-4xl md:text-6xl font-bold mb-6 leading-tight">
        {{ section.settings.hero_title | default: 'Premium Cycling Store' }}
      </h1>
      
      <p class="hero__subtitle text-xl md:text-2xl mb-8 max-w-3xl mx-auto opacity-90">
        {{ section.settings.hero_subtitle | default: 'Discover the perfect bike, gear, and accessories for your cycling adventure. From mountain trails to city streets, we have everything you need.' }}
      </p>
      
      <div class="hero__buttons flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="{{ section.settings.primary_button_url | default: '/collections/all' }}" 
          class="hero__btn-primary bg-white text-primary-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gray-100 transition-colors duration-200 inline-block"
        >
          {{ section.settings.primary_button_text | default: 'Shop Now' }}
        </a>
        
        <a 
          href="{{ section.settings.secondary_button_url | default: '/pages/about' }}" 
          class="hero__btn-secondary border-2 border-white text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-white hover:text-primary-600 transition-colors duration-200 inline-block"
        >
          {{ section.settings.secondary_button_text | default: 'Learn More' }}
        </a>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="hero__scroll absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<style>
  .hero {
    position: relative;
    background: linear-gradient(135deg, var(--primary-600) 0%, var(--primary-700) 100%);
    color: white;
    overflow: hidden;
  }
  
  .hero__background {
    position: absolute;
    inset: 0;
  }
  
  .hero__background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .hero__background::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.2);
  }
  
  .hero__content {
    padding: 5rem 0;
    text-align: center;
    position: relative;
    z-index: 10;
  }
  
  .hero__title {
    font-size: 2.25rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }
  
  .hero__subtitle {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    max-width: 48rem;
    margin-left: auto;
    margin-right: auto;
    opacity: 0.9;
  }
  
  .hero__buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
  }
  
  .hero__btn-primary {
    background: white;
    color: var(--primary-600);
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 1.125rem;
    transition: background-color 0.2s;
    display: inline-block;
    text-decoration: none;
  }
  
  .hero__btn-primary:hover {
    background: #f3f4f6;
  }
  
  .hero__btn-secondary {
    border: 2px solid white;
    color: white;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 1.125rem;
    transition: all 0.2s;
    display: inline-block;
    text-decoration: none;
  }
  
  .hero__btn-secondary:hover {
    background: white;
    color: var(--primary-600);
  }
  
  .hero__scroll {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s infinite;
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }
  
  @media (min-width: 640px) {
    .hero__buttons {
      flex-direction: row;
    }
  }
  
  @media (min-width: 768px) {
    .hero__content {
      padding: 8rem 0;
    }
    
    .hero__title {
      font-size: 3.75rem;
    }
    
    .hero__subtitle {
      font-size: 1.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Background Image"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "Premium Cycling Store"
    },
    {
      "type": "textarea",
      "id": "hero_subtitle",
      "label": "Hero Subtitle",
      "default": "Discover the perfect bike, gear, and accessories for your cycling adventure. From mountain trails to city streets, we have everything you need."
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "primary_button_url",
      "label": "Primary Button URL"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_button_url",
      "label": "Secondary Button URL"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
