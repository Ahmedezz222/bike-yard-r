{% comment %}
  Testimonials section for Bike Yard Shopify theme
{% endcomment %}

<section class="testimonials py-16 bg-gray-50">
  <div class="container">
    <div class="testimonials__header text-center mb-12">
      <h2 class="testimonials__title text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        {{ section.settings.title | default: 'What Our Customers Say' }}
      </h2>
      <p class="testimonials__subtitle text-lg text-gray-600 max-w-2xl mx-auto">
        {{ section.settings.subtitle | default: 'Don\'t just take our word for it. Here\'s what our cycling community has to say about their experience with Bike Yard.' }}
      </p>
    </div>

    <div class="testimonials__grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'testimonial' %}
            <div class="testimonials__item bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300" {{ block.shopify_attributes }}>
              <div class="testimonials__rating flex items-center mb-4">
                {% assign rating = block.settings.rating | default: 5 %}
                {% for i in (1..5) %}
                  {% if i <= rating %}
                    <svg class="w-5 h-5 text-accent-500" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  {% else %}
                    <svg class="w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  {% endif %}
                {% endfor %}
              </div>
              
              <blockquote class="testimonials__quote text-gray-700 mb-6 italic">
                "{{ block.settings.quote | default: 'Amazing service and great selection of bikes. The team really knows their stuff!' }}"
              </blockquote>
              
              <div class="testimonials__author flex items-center">
                {% if block.settings.author_image %}
                  <img 
                    src="{{ block.settings.author_image | image_url: width: 48, height: 48, crop: 'center' }}" 
                    alt="{{ block.settings.author_name | escape }}"
                    class="testimonials__author-image w-12 h-12 rounded-full mr-4"
                    loading="lazy"
                  >
                {% else %}
                  <div class="testimonials__author-placeholder w-12 h-12 rounded-full mr-4 bg-primary-600 flex items-center justify-center">
                    <span class="text-white font-semibold text-sm">
                      {{ block.settings.author_name | slice: 0, 1 | upcase }}
                    </span>
                  </div>
                {% endif %}
                
                <div class="testimonials__author-info">
                  <div class="testimonials__author-name font-semibold text-gray-900">
                    {{ block.settings.author_name | default: 'John Doe' }}
                  </div>
                  {% if block.settings.author_title %}
                    <div class="testimonials__author-title text-sm text-gray-600">
                      {{ block.settings.author_title }}
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    {% if section.settings.show_reviews_link %}
      <div class="testimonials__cta text-center mt-12">
        <a 
          href="{{ section.settings.reviews_link_url | default: '/pages/reviews' }}" 
          class="testimonials__cta-btn inline-block bg-primary-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary-700 transition-colors duration-200"
        >
          {{ section.settings.reviews_link_text | default: 'Read More Reviews' }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .testimonials {
    padding: 4rem 0;
    background-color: var(--gray-50);
  }
  
  .testimonials__header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .testimonials__title {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 1rem;
  }
  
  .testimonials__subtitle {
    font-size: 1.125rem;
    color: var(--gray-600);
    max-width: 42rem;
    margin-left: auto;
    margin-right: auto;
  }
  
  .testimonials__grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2rem;
  }
  
  .testimonials__item {
    background: white;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
    transition: box-shadow 0.3s;
  }
  
  .testimonials__item:hover {
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }
  
  .testimonials__rating {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }
  
  .testimonials__rating svg {
    width: 1.25rem;
    height: 1.25rem;
  }
  
  .testimonials__rating svg.text-accent-500 {
    color: var(--accent-500);
  }
  
  .testimonials__rating svg.text-gray-300 {
    color: var(--gray-300);
  }
  
  .testimonials__quote {
    color: var(--gray-700);
    margin-bottom: 1.5rem;
    font-style: italic;
    line-height: 1.6;
  }
  
  .testimonials__author {
    display: flex;
    align-items: center;
  }
  
  .testimonials__author-image {
    width: 3rem;
    height: 3rem;
    border-radius: 9999px;
    margin-right: 1rem;
  }
  
  .testimonials__author-placeholder {
    width: 3rem;
    height: 3rem;
    border-radius: 9999px;
    margin-right: 1rem;
    background-color: var(--primary-600);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .testimonials__author-placeholder span {
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
  }
  
  .testimonials__author-name {
    font-weight: 600;
    color: var(--gray-900);
  }
  
  .testimonials__author-title {
    font-size: 0.875rem;
    color: var(--gray-600);
  }
  
  .testimonials__cta {
    text-align: center;
    margin-top: 3rem;
  }
  
  .testimonials__cta-btn {
    display: inline-block;
    background-color: var(--primary-600);
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: background-color 0.2s;
  }
  
  .testimonials__cta-btn:hover {
    background-color: var(--primary-700);
  }
  
  @media (min-width: 768px) {
    .testimonials__grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .testimonials__title {
      font-size: 2.25rem;
    }
  }
  
  @media (min-width: 1024px) {
    .testimonials__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>

{% schema %}
