  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "What Our Customers Say"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Don't just take our word for it. Here's what our cycling community has to say about their experience with Bike Yard."
    },
    {
      "type": "checkbox",
