{% comment %}
  Footer section for Bike Yard Shopify theme
{% endcomment %}

<footer class="footer bg-gray-900 text-white">
  <div class="container">
    <div class="footer__content py-12">
      <div class="footer__grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Company Info -->
        <div class="footer__company">
          <div class="footer__logo flex items-center space-x-2 mb-4">
            <div class="w-10 h-10 bg-primary-600 rounded-lg flex items-center justify-center">
              <span class="text-white font-bold text-xl">BY</span>
            </div>
            <span class="text-2xl font-bold">{{ shop.name }}</span>
          </div>
          
          <p class="footer__description text-gray-300 mb-6 leading-relaxed">
            {{ section.settings.company_description | default: 'Your premier destination for premium bikes, gear, and cycling expertise. We\'re passionate about helping you find the perfect ride for your adventures.' }}
          </p>
          
          <div class="footer__social flex space-x-4">
            {% if section.settings.facebook_url %}
              <a href="{{ section.settings.facebook_url }}" class="footer__social-link text-gray-400 hover:text-white transition-colors duration-200">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.instagram_url %}
              <a href="{{ section.settings.instagram_url }}" class="footer__social-link text-gray-400 hover:text-white transition-colors duration-200">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.297-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.807.875 1.297 2.026 1.297 3.323s-.49 2.448-1.297 3.323c-.875.807-2.026 1.297-3.323 1.297zm7.83-9.781c-.49 0-.875-.385-.875-.875s.385-.875.875-.875.875.385.875.875-.385.875-.875.875zm-7.83 9.781c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.297-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.807.875 1.297 2.026 1.297 3.323s-.49 2.448-1.297 3.323c-.875.807-2.026 1.297-3.323 1.297z"/>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.twitter_url %}
              <a href="{{ section.settings.twitter_url }}" class="footer__social-link text-gray-400 hover:text-white transition-colors duration-200">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.youtube_url %}
              <a href="{{ section.settings.youtube_url }}" class="footer__social-link text-gray-400 hover:text-white transition-colors duration-200">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>

        <!-- Quick Links -->
        <div class="footer__links">
          <h3 class="footer__section-title text-lg font-semibold mb-4">Quick Links</h3>
          <ul class="footer__links-list space-y-2">
            {% for link in linklists.footer.links %}
              <li>
                <a href="{{ link.url }}" class="footer__link text-gray-300 hover:text-white transition-colors duration-200">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>

        <!-- Customer Service -->
        <div class="footer__customer-service">
          <h3 class="footer__section-title text-lg font-semibold mb-4">Customer Service</h3>
          <ul class="footer__service-list space-y-2">
            <li>
              <a href="{{ routes.account_url }}" class="footer__link text-gray-300 hover:text-white transition-colors duration-200">
                My Account
              </a>
            </li>
            <li>
              <a href="{{ routes.cart_url }}" class="footer__link text-gray-300 hover:text-white transition-colors duration-200">
                Shopping Cart
              </a>
            </li>
            <li>
              <a href="/pages/contact" class="footer__link text-gray-300 hover:text-white transition-colors duration-200">
                Contact Us
              </a>
            </li>
            <li>
              <a href="/pages/shipping" class="footer__link text-gray-300 hover:text-white transition-colors duration-200">
                Shipping Info
              </a>
            </li>
            <li>
              <a href="/pages/returns" class="footer__link text-gray-300 hover:text-white transition-colors duration-200">
                Returns & Exchanges
              </a>
            </li>
          </ul>
        </div>

        <!-- Contact Info -->
        <div class="footer__contact">
          <h3 class="footer__section-title text-lg font-semibold mb-4">Contact Info</h3>
          <div class="footer__contact-info space-y-3">
            {% if section.settings.address %}
              <div class="footer__contact-item flex items-start space-x-3">
                <svg class="w-5 h-5 text-gray-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span class="text-gray-300">{{ section.settings.address }}</span>
              </div>
            {% endif %}
            
            {% if section.settings.phone %}
              <div class="footer__contact-item flex items-center space-x-3">
                <svg class="w-5 h-5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <a href="tel:{{ section.settings.phone }}" class="text-gray-300 hover:text-white transition-colors duration-200">
                  {{ section.settings.phone }}
                </a>
              </div>
            {% endif %}
            
            {% if section.settings.email %}
              <div class="footer__contact-item flex items-center space-x-3">
                <svg class="w-5 h-5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <a href="mailto:{{ section.settings.email }}" class="text-gray-300 hover:text-white transition-colors duration-200">
                  {{ section.settings.email }}
                </a>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="footer__bottom border-t border-gray-800 py-6">
      <div class="footer__bottom-content flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="footer__copyright text-gray-400 text-sm">
          Â© {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
        </div>
        
        <div class="footer__legal flex space-x-6">
          <a href="/pages/privacy-policy" class="footer__legal-link text-gray-400 hover:text-white text-sm transition-colors duration-200">
            Privacy Policy
          </a>
          <a href="/pages/terms-of-service" class="footer__legal-link text-gray-400 hover:text-white text-sm transition-colors duration-200">
            Terms of Service
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--gray-900);
    color: white;
  }
  
  .footer__content {
    padding: 3rem 0;
  }
  
  .footer__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .footer__logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }
  
  .footer__logo .w-10 {
    width: 2.5rem;
    height: 2.5rem;
    background-color: var(--primary-600);
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .footer__description {
    color: var(--gray-300);
    margin-bottom: 1.5rem;
    line-height: 1.75;
  }
  
  .footer__social {
    display: flex;
    gap: 1rem;
  }
  
  .footer__social-link {
    color: var(--gray-400);
    transition: color 0.2s;
  }
  
  .footer__social-link:hover {
    color: white;
  }
  
  .footer__section-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .footer__links-list,
  .footer__service-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer__links-list li,
  .footer__service-list li {
    margin-bottom: 0.5rem;
  }
  
  .footer__link {
    color: var(--gray-300);
    text-decoration: none;
    transition: color 0.2s;
  }
  
  .footer__link:hover {
    color: white;
  }
  
  .footer__contact-info {
    margin: 0;
    padding: 0;
  }
  
  .footer__contact-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }
  
  .footer__contact-item svg {
    width: 1.25rem;
    height: 1.25rem;
    color: var(--gray-400);
    flex-shrink: 0;
    margin-top: 0.125rem;
  }
  
  .footer__bottom {
    border-top: 1px solid var(--gray-800);
    padding: 1.5rem 0;
  }
  
  .footer__bottom-content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }
  
  .footer__copyright {
    color: var(--gray-400);
    font-size: 0.875rem;
  }
  
  .footer__legal {
    display: flex;
    gap: 1.5rem;
  }
  
  .footer__legal-link {
    color: var(--gray-400);
    font-size: 0.875rem;
    text-decoration: none;
    transition: color 0.2s;
  }
  
  .footer__legal-link:hover {
    color: white;
  }
  
  @media (min-width: 768px) {
    .footer__grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .footer__bottom-content {
      flex-direction: row;
      gap: 0;
    }
  }
  
  @media (min-width: 1024px) {
    .footer__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "textarea",
      "id": "company_description",
      "label": "Company Description",
      "default": "Your premier destination for premium bikes, gear, and cycling expertise. We're passionate about helping you find the perfect ride for your adventures."
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number"
    },
    {
      "type": "email",
      "id": "email",
      "label": "Email Address"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube URL"
    }
  ]
}
{% endschema %}
