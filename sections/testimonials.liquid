{% comment %}
  Testimonials section for Bike Yard Shopify theme
{% endcomment %}

<section class="testimonials py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16 animate-fade-in">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        What Our
        <span class="text-gradient-primary">Customers Say</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Don't just take our word for it. Here's what our community of cyclists has to say about their experience.
      </p>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'testimonial' %}
            <div class="card p-6 relative animate-slide-up">
              <!-- Quote Icon -->
              <div class="absolute top-4 right-4 text-primary-200">
                <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
              </div>

              <!-- Rating -->
              <div class="flex items-center mb-4">
                {% for i in (1..5) %}
                  <svg class="h-5 w-5 {% if i <= block.settings.rating %}text-yellow-400 fill-current{% else %}text-gray-300{% endif %}" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                {% endfor %}
              </div>

              <!-- Content -->
              <p class="text-gray-600 leading-relaxed mb-6">
                "{{ block.settings.quote }}"
              </p>

              <!-- Author -->
              <div class="flex items-center">
                <div class="relative w-12 h-12 rounded-full overflow-hidden mr-4">
                  {% if block.settings.author_image %}
                    <img
                      src="{{ block.settings.author_image | image_url: width: 48, height: 48 }}"
                      alt="{{ block.settings.author_name | escape }}"
                      class="object-cover"
                    >
                  {% else %}
                    <div class="w-full h-full bg-gray-300 flex items-center justify-center">
                      <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                      </svg>
                    </div>
                  {% endif %}
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">
                    {{ block.settings.author_name }}
                  </h4>
                  <p class="text-sm text-gray-600">
                    {{ block.settings.author_title }}
                  </p>
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <!-- Stats Section -->
    <div class="mt-20 bg-gradient-to-r from-primary-600 to-accent-600 rounded-2xl p-8 text-white animate-fade-in">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-4xl font-bold mb-2">500+</div>
          <div class="text-primary-100">Happy Customers</div>
        </div>
        <div>
          <div class="text-4xl font-bold mb-2">4.9</div>
          <div class="text-primary-100">Average Rating</div>
        </div>
        <div>
          <div class="text-4xl font-bold mb-2">1000+</div>
          <div class="text-primary-100">Bikes Sold</div>
        </div>
        <div>
          <div class="text-4xl font-bold mb-2">24/7</div>
          <div class="text-primary-100">Support Available</div>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="text-center mt-16 animate-fade-in">
      <h3 class="text-2xl font-bold text-gray-900 mb-4">
        Join Our Cycling Community
      </h3>
      <p class="text-gray-600 mb-8 max-w-2xl mx-auto">
        Experience the difference that quality bikes, expert service, and a passionate community can make in your cycling journey.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/collections/all" class="btn-primary">
          Shop Now
        </a>
        <a href="/pages/testimonials" class="btn-secondary">
          Read More Reviews
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .testimonials {
    padding: 5rem 0;
    background: white;
  }
  
  .testimonials > div {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .testimonials h2 {
    font-size: 2.25rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 1rem;
  }
  
  .text-gradient {
    background: linear-gradient(135deg, var(--accent-400) 0%, var(--primary-400) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .testimonials p {
    font-size: 1.25rem;
    color: #6b7280;
    max-width: 48rem;
    margin: 0 auto;
  }
  
  .grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2rem;
  }
  
  .card {
    background: white;
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
    position: relative;
  }
  
  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
  
  .card .p-6 {
    padding: 1.5rem;
  }
  
  .card .absolute.top-4.right-4 {
    position: absolute;
    top: 1rem;
    right: 1rem;
    color: var(--primary-200);
  }
  
  .card .flex.items-center.mb-4 {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }
  
  .card .text-gray-600 {
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
  
  .card .flex.items-center:last-child {
    display: flex;
    align-items: center;
  }
  
  .card .relative.w-12.h-12 {
    position: relative;
    width: 3rem;
    height: 3rem;
    border-radius: 9999px;
    overflow: hidden;
    margin-right: 1rem;
  }
  
  .card .relative.w-12.h-12 img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .card .relative.w-12.h-12 > div {
    width: 100%;
    height: 100%;
    background: #d1d5db;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .card .font-semibold {
    font-weight: 600;
    color: #111827;
  }
  
  .card .text-sm {
    font-size: 0.875rem;
    color: #6b7280;
  }
  
  .mt-20 {
    margin-top: 5rem;
  }
  
  .bg-gradient-to-r {
    background: linear-gradient(to right, var(--primary-600), var(--accent-600));
    border-radius: 1rem;
    padding: 2rem;
    color: white;
  }
  
  .bg-gradient-to-r .grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2rem;
    text-align: center;
  }
  
  .bg-gradient-to-r .text-4xl {
    font-size: 2.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }
  
  .bg-gradient-to-r .text-primary-100 {
    color: rgba(255, 255, 255, 0.8);
  }
  
  .mt-16 {
    margin-top: 4rem;
  }
  
  .mt-16 h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 1rem;
  }
  
  .mt-16 p {
    color: #6b7280;
    margin-bottom: 2rem;
    max-width: 32rem;
    margin-left: auto;
    margin-right: auto;
  }
  
  .mt-16 .flex {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
  }
  
  .btn-primary {
    background: var(--primary-600);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
  }
  
  .btn-primary:hover {
    background: var(--primary-700);
    transform: translateY(-2px);
  }
  
  .btn-secondary {
    background: transparent;
    color: var(--primary-600);
    border: 2px solid var(--primary-600);
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
  }
  
  .btn-secondary:hover {
    background: var(--primary-600);
    color: white;
  }
  
  @media (min-width: 768px) {
    .testimonials h2 {
      font-size: 3rem;
    }
    
    .grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .bg-gradient-to-r .grid {
      grid-template-columns: repeat(4, 1fr);
    }
    
    .mt-16 .flex {
      flex-direction: row;
    }
  }
  
  @media (min-width: 1024px) {
    .grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>

