{% comment %}
  Header section for Bike Yard Shopify theme
{% endcomment %}

<header class="header bg-white shadow-lg sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="{{ routes.root_url }}" class="flex items-center space-x-2 group">
          <div class="w-10 h-10 bg-animated-gradient rounded-lg flex items-center justify-center transition-transform duration-300 group-hover:scale-110">
            <span class="text-white font-bold text-xl">BY</span>
          </div>
          <span class="text-2xl font-bold text-gradient-primary">Bike Yard</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8">
        <a href="{{ routes.root_url }}" class="nav-link text-gray-700 hover:text-primary-600 px-3 py-2 text-sm font-medium transition-all duration-300 hover:scale-105">
          Home
        </a>
        <a href="/collections/all" class="nav-link text-gray-700 hover:text-primary-600 px-3 py-2 text-sm font-medium transition-all duration-300 hover:scale-105">
          Products
        </a>
        <a href="/pages/cafe" class="nav-link text-gray-700 hover:text-primary-600 px-3 py-2 text-sm font-medium transition-all duration-300 hover:scale-105">
          Cafe Menu
        </a>
        <a href="/pages/services" class="nav-link text-gray-700 hover:text-primary-600 px-3 py-2 text-sm font-medium transition-all duration-300 hover:scale-105">
          Services
        </a>
        <a href="/pages/about" class="nav-link text-gray-700 hover:text-primary-600 px-3 py-2 text-sm font-medium transition-all duration-300 hover:scale-105">
          About
        </a>
      </nav>

      <!-- Right side icons -->
      <div class="flex items-center space-x-4">
        <!-- Search -->
        <button class="icon-btn p-2 text-gray-700 hover:text-primary-600 transition-all duration-300 hover:scale-110" onclick="toggleSearch()">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </button>

        <!-- User -->
        <a href="{{ routes.account_url }}" class="icon-btn p-2 text-gray-700 hover:text-primary-600 transition-all duration-300 hover:scale-110">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </a>

        <!-- Cart -->
        <a href="{{ routes.cart_url }}" class="icon-btn relative p-2 text-gray-700 hover:text-primary-600 transition-all duration-300 hover:scale-110">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m6-5v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6m8 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v4.01"></path>
          </svg>
          {% if cart.item_count > 0 %}
            <span class="cart-badge absolute -top-1 -right-1 bg-accent-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center animate-bounce-gentle">
              {{ cart.item_count }}
            </span>
          {% endif %}
        </a>

        <!-- Mobile menu button -->
        <button
          class="md:hidden icon-btn p-2 text-gray-700 hover:text-primary-600 transition-all duration-300 hover:scale-110"
          onclick="toggleMobileMenu()"
        >
          <svg id="menu-icon" class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg id="close-icon" class="h-5 w-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t">
        <a href="{{ routes.root_url }}" class="mobile-nav-link text-gray-700 hover:text-primary-600 block px-3 py-2 text-base font-medium transition-all duration-300">
          Home
        </a>
        <a href="/collections/all" class="mobile-nav-link text-gray-700 hover:text-primary-600 block px-3 py-2 text-base font-medium transition-all duration-300">
          Products
        </a>
        <a href="/pages/cafe" class="mobile-nav-link text-gray-700 hover:text-primary-600 block px-3 py-2 text-base font-medium transition-all duration-300">
          Cafe Menu
        </a>
        <a href="/pages/services" class="mobile-nav-link text-gray-700 hover:text-primary-600 block px-3 py-2 text-base font-medium transition-all duration-300">
          Services
        </a>
        <a href="/pages/about" class="mobile-nav-link text-gray-700 hover:text-primary-600 block px-3 py-2 text-base font-medium transition-all duration-300">
          About
        </a>
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    background: #fff;
    box-shadow: 0 2px 8px rgba(0,0,0,0.07);
    position: sticky;
    top: 0;
    z-index: 50;
  }
  
  .header-container {
    max-width: 80rem;
    margin: 0 auto;
    padding-left: 1rem;
    padding-right: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 4rem;
  }
  
  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .logo-icon {
    width: 2.5rem;
    height: 2.5rem;
    background: #0284c7; /* Example for bg-primary-600 */
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .logo-text {
    font-size: 1.5rem;
    font-weight: bold;
    color: #111827; /* text-gray-900 */
  }
  
  .nav-link {
    color: #374151; /* text-gray-700 */
    padding: 0.5rem 0.75rem;
    font-size: 1rem;
    font-weight: 500;
    transition: color 0.2s;
    text-decoration: none;
  }
  
  .nav-link:hover {
    color: #0284c7; /* hover:text-primary-600 */
  }
  
  .icon-btn {
    padding: 0.5rem;
    color: #374151;
    background: none;
    border: none;
    transition: color 0.2s;
    cursor: pointer;
  }
  
  .icon-btn:hover {
    color: #0284c7;
  }
  
  .cart-badge {
    position: absolute;
    top: -0.25rem;
    right: -0.25rem;
    background: #f59e0b; /* bg-accent-500 */
    color: #fff;
    font-size: 0.75rem;
    border-radius: 9999px;
    height: 1.25rem;
    width: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  @media (max-width: 768px) {
    .desktop-nav {
      display: none;
    }
    .mobile-nav {
      display: block;
    }
  }
  @media (min-width: 768px) {
    .mobile-nav {
      display: none;
    }
  }
</style>

<script>
  function toggleMobileMenu() {
    const mobileMenu = document.getElementById('mobile-menu');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');
    
    if (mobileMenu.classList.contains('hidden')) {
      mobileMenu.classList.remove('hidden');
      mobileMenu.classList.add('show');
      menuIcon.classList.add('hidden');
      closeIcon.classList.remove('hidden');
    } else {
      mobileMenu.classList.add('hidden');
      mobileMenu.classList.remove('show');
      menuIcon.classList.remove('hidden');
      closeIcon.classList.add('hidden');
    }
  }
  
  function toggleSearch() {
    // Implement search functionality
    console.log('Search toggled');
  }
</script>
