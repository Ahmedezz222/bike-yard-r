{% comment %}
  Featured Products section for Bike Yard Shopify theme
{% endcomment %}

<section class="featured-products py-16 bg-gray-50">
  <div class="container">
    <div class="featured-products__header text-center mb-12">
      <h2 class="featured-products__title text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        {{ section.settings.title | default: 'Featured Products' }}
      </h2>
      <p class="featured-products__subtitle text-lg text-gray-600 max-w-2xl mx-auto">
        {{ section.settings.subtitle | default: 'Discover our handpicked selection of premium bikes and cycling gear' }}
      </p>
    </div>

    <div class="featured-products__grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      {% assign collection = collections[section.settings.collection] %}
      {% if collection %}
        {% for product in collection.products limit: section.settings.products_to_show %}
          <div class="featured-products__item bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
            <div class="featured-products__image relative">
              <a href="{{ product.url }}">
                {% if product.featured_image %}
                  <img 
                    src="{{ product.featured_image | image_url: width: 400, height: 300, crop: 'center' }}" 
                    alt="{{ product.featured_image.alt | escape }}"
                    class="w-full h-48 object-cover"
                    loading="lazy"
                  >
                {% else %}
                  <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                    <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                {% endif %}
                
                {% if product.compare_at_price > product.price %}
                  <div class="featured-products__badge absolute top-2 left-2 bg-accent-500 text-white text-xs font-semibold px-2 py-1 rounded">
                    Sale
                  </div>
                {% endif %}
              </a>
            </div>

            <div class="featured-products__content p-4">
              <h3 class="featured-products__product-title text-lg font-semibold text-gray-900 mb-2">
                <a href="{{ product.url }}" class="hover:text-primary-600 transition-colors duration-200">
                  {{ product.title }}
                </a>
              </h3>
              
              <div class="featured-products__price mb-4">
                {% if product.compare_at_price > product.price %}
                  <span class="featured-products__compare-price text-gray-500 line-through mr-2">
                    {{ product.compare_at_price | money }}
                  </span>
                {% endif %}
                <span class="featured-products__current-price text-xl font-bold text-primary-600">
                  {{ product.price | money }}
                </span>
              </div>

              <div class="featured-products__actions">
                {% if product.available %}
                  <form action="/cart/add" method="post" class="featured-products__form">
                    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    <button 
                      type="submit" 
                      class="featured-products__add-to-cart w-full bg-primary-600 text-white py-2 px-4 rounded-lg font-semibold hover:bg-primary-700 transition-colors duration-200"
                    >
                      Add to Cart
                    </button>
                  </form>
                {% else %}
                  <button 
                    disabled 
                    class="featured-products__sold-out w-full bg-gray-300 text-gray-500 py-2 px-4 rounded-lg font-semibold cursor-not-allowed"
                  >
                    Sold Out
                  </button>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      {% else %}
        {% for i in (1..4) %}
          <div class="featured-products__placeholder bg-white rounded-lg shadow-md overflow-hidden">
            <div class="w-full h-48 bg-gray-200"></div>
            <div class="p-4">
              <div class="h-6 bg-gray-200 rounded mb-2"></div>
              <div class="h-4 bg-gray-200 rounded mb-4"></div>
              <div class="h-10 bg-gray-200 rounded"></div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>

    {% if section.settings.show_view_all and collection %}
      <div class="featured-products__view-all text-center mt-12">
        <a 
          href="{{ collection.url }}" 
          class="featured-products__view-all-btn inline-block bg-white border-2 border-primary-600 text-primary-600 px-8 py-3 rounded-lg font-semibold hover:bg-primary-600 hover:text-white transition-colors duration-200"
        >
          {{ section.settings.view_all_text | default: 'View All Products' }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .featured-products {
    padding: 4rem 0;
    background-color: var(--gray-50);
  }
  
  .featured-products__header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .featured-products__title {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 1rem;
  }
  
  .featured-products__subtitle {
    font-size: 1.125rem;
    color: var(--gray-600);
    max-width: 42rem;
    margin-left: auto;
    margin-right: auto;
  }
  
  .featured-products__grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1.5rem;
  }
  
  .featured-products__item {
    background: white;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: box-shadow 0.3s;
  }
  
  .featured-products__item:hover {
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }
  
  .featured-products__image {
    position: relative;
  }
  
  .featured-products__image img {
    width: 100%;
    height: 12rem;
    object-fit: cover;
  }
  
  .featured-products__badge {
    position: absolute;
    top: 0.5rem;
    left: 0.5rem;
    background-color: var(--accent-500);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
  }
  
  .featured-products__content {
    padding: 1rem;
  }
  
  .featured-products__product-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--gray-900);
    margin-bottom: 0.5rem;
  }
  
  .featured-products__product-title a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s;
  }
  
  .featured-products__product-title a:hover {
    color: var(--primary-600);
  }
  
  .featured-products__price {
    margin-bottom: 1rem;
  }
  
  .featured-products__compare-price {
    color: var(--gray-500);
    text-decoration: line-through;
    margin-right: 0.5rem;
  }
  
  .featured-products__current-price {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--primary-600);
  }
  
  .featured-products__add-to-cart {
    width: 100%;
    background-color: var(--primary-600);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: 600;
    border: none;
    cursor: pointer;
    transition: background-color 0.2s;
  }
  
  .featured-products__add-to-cart:hover {
    background-color: var(--primary-700);
  }
  
  .featured-products__sold-out {
    width: 100%;
    background-color: var(--gray-300);
    color: var(--gray-500);
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: 600;
    border: none;
    cursor: not-allowed;
  }
  
  .featured-products__view-all {
    text-align: center;
    margin-top: 3rem;
  }
  
  .featured-products__view-all-btn {
    display: inline-block;
    background: white;
    border: 2px solid var(--primary-600);
    color: var(--primary-600);
    padding: 0.75rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }
  
  .featured-products__view-all-btn:hover {
    background-color: var(--primary-600);
    color: white;
  }
  
  @media (min-width: 768px) {
    .featured-products__grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .featured-products__title {
      font-size: 2.25rem;
    }
  }
  
  @media (min-width: 1024px) {
    .featured-products__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media (min-width: 1280px) {
    .featured-products__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Discover our handpicked selection of premium bikes and cycling gear"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection to display"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 12,
      "step": 2,
      "default": 8,
      "label": "Number of products to show"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View All button text",
      "default": "View All Products"
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}
